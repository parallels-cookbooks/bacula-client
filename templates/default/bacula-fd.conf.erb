#
# Generated by Chef for <%= node['fqdn'] %>
#

Director {
  Name = "<%= node['bacula']['client']['director_name'] %>"
  Password = "<%= @fd_password %>"
}

FileDaemon {
  Name = <%= node['fqdn'] %>
  FDport = 9102
  WorkingDirectory = "<%= node['bacula']['client']['working_directory'] %>"
  Pid Directory = "<%= node['bacula']['client']['pid_directory'] %>"
  <% if node['bacula']['client']['plugin_dir'] %>
  Plugin Directory = "<%= node['bacula']['client']['plugin_dir'] %>"
  <% end %>
  Maximum Concurrent Jobs = 20
}

Messages {
  Name = Standard
  director = backup-dir = all, !skipped, !restored
}
